{
    "compilerOptions": {
        "target": "es2017",
        "module": "amd",
        "strict": true,
        

        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "lib": ["DOM", "ES2015.Promise", "ES6"],
        "sourceMap": true,
        "noLib": false,
        "allowJs": true,
        "alwaysStrict": true,
        
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "./src",
        "experimentalDecorators": true, 
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}